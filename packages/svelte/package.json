{
  "name": "@touchspin/svelte",
  "version": "5.0.2",
  "description": "Svelte adapter for TouchSpin with per-renderer subpaths",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./vanilla": {
      "types": "./dist/vanilla.d.ts",
      "import": "./dist/vanilla.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "svelte-check --tsconfig ./tsconfig.json && vite build",
    "build:test": "svelte-check --tsconfig ./tsconfig.json && vite build",
    "build:watch": "svelte-check --tsconfig ./tsconfig.json && vite build --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "peerDependencies": {
    "@touchspin/renderer-vanilla": "5.0.1",
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "@touchspin/renderer-vanilla": {
      "optional": true
    }
  },
  "dependencies": {
    "@touchspin/core": "5.0.1",
    "@touchspin/renderer-vanilla": "5.0.1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/node": "^22.7.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.11",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "touchspin",
    "svelte",
    "spinner",
    "number-input"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/touchspin-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/touchspin-svelte/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/touchspin-svelte#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/istvan-ujjmeszaros"
  }
}
